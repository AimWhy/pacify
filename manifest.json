{
  "manifest_version": 3,
  "name": "PACify | The Proxy Manager",
  "version": "1.5.0",
  "description": "Complete proxy manager for Chrome. Create, edit, and switch between PAC scripts, manual proxies, and system configurations easily.",
  "permissions": ["proxy", "storage"],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "chrome_style": false,
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
